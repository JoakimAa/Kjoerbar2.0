<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.illusion_softworks.kjoerbar.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_unitCatalogFragment"
            app:destination="@id/unitCatalogFragment"
            app:enterAnim="@anim/fui_slide_in_right"
            app:exitAnim="@anim/fui_slide_out_left" />
        <action
            android:id="@+id/action_mainFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>

    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.illusion_softworks.kjoerbar.fragments.FriendsFragment"
        android:label="fragment_friends"
        tools:layout="@layout/fragment_friends" />

    <fragment
        android:id="@+id/sessionFragment"
        android:name="com.illusion_softworks.kjoerbar.fragments.SessionFragment"
        android:label="fragment_session"
        tools:layout="@layout/fragment_session" />

    <fragment
        android:id="@+id/addDrinkFragment"
        android:name="com.illusion_softworks.kjoerbar.fragments.AddBeverageFragment"
        android:label="fragment_add_drink"
        tools:layout="@layout/fragment_add_drink" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.illusion_softworks.kjoerbar.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/unitCatalogFragment"
        android:name="com.illusion_softworks.kjoerbar.fragments.UnitCatalogFragment"
        android:label="fragment_unit_catalog"
        tools:layout="@layout/fragment_unit_catalog">
        <action
            android:id="@+id/action_unitCatalogFragment_to_addDrinkFragment"
            app:destination="@id/addDrinkFragment" />
        <action
            android:id="@+id/action_unitCatalogFragment_to_unitWorkshopFragment"
            app:destination="@id/unitWorkshopFragment" />
    </fragment>

    <fragment
        android:id="@+id/unitWorkshopFragment"
        android:name="com.illusion_softworks.kjoerbar.fragments.UnitWorkshopFragment"
        android:label="fragment_unit_workshop"
        tools:layout="@layout/fragment_unit_workshop" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.illusion_softworks.kjoerbar.fragments.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
        <action
            android:id="@+id/action_global_friendsFragment"
            app:destination="@id/friendsFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/friendsFragment" />
        <action
            android:id="@+id/action_global_sessionFragment"
            app:destination="@id/sessionFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/sessionFragment" />
        <action
            android:id="@+id/action_global_mapFragment"
            app:destination="@id/mapFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/mapFragment" />
        <action
            android:id="@+id/action_global_unitCatalogFragment"
            app:destination="@id/unitCatalogFragment"
            app:popUpTo="@id/unitCatalogFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_global_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_global_historyFragment"
            app:destination="@id/historyFragment"
            app:popUpTo="@id/historyFragment"
            app:launchSingleTop="true" />
    <!--<fragment
    android:id="@+id/settingsFragment"
    android:name="com.illusion_softworks.kjoerbar.fragments.SettingsFragment"
    android:label="fragment_settings"
    tools:layout="@layout/fragment_unit_workshop" >
    </fragment>-->
</navigation>